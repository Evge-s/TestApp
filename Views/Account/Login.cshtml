@model TestApp.Models.ViewModels.LoginModel

<h1>Log in</h1>

<p>
    <a asp-action="Registration" asp-controller="Account">Registration</a>
</p>

<form asp-action="Login" asp-controller="Account" asp-antiforgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="Login">Enter Email</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" class="text-danger" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter Password</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Login" class="btn btn-outline-dark" />
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial.cshtml" />
}